Method 2 using Function
#include <bits/stdc++.h>
using namespace std;
int main()
{
    int val, i;
    long long int sum = 0;
    vector<int> array;
    for (i = 0; i < 5; i++)
    {
        cin >> val;
        sum += val;
        //cout<<sum<<" ";
        array.push_back(val);
    }

    //cout<<endl;
    sort(array.begin(), array.end());

    /*for(i=0; i < 5; i++)
    {
     cout<<array[i]<<endl;
    }*/
    cout << sum - array[4] << " " << sum - array[0];
    return 0;
}
